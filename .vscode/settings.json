{
  "prettier.configPath": ".prettierrc",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "json.schemas": [
    {
      "fileMatch": ["data/cards.json"],
      "url": "./data/cards.schema.json"
    },
    {
      "fileMatch": ["data/illustrators.json"],
      "url": "./data/illustrators.schema.json"
    },
    {
      "fileMatch": ["data/rarity.json"],
      "url": "./data/rarity.schema.json"
    },
    {
      "fileMatch": ["data/series.json"],
      "url": "./data/series.schema.json"
    },
    {
      "fileMatch": ["data/sets.json"],
      "url": "./data/sets.schema.json"
    },
    {
      "fileMatch": ["data/type.json"],
      "url": "./data/type.schema.json"
    }
  ]
}
