{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "series_short_name", "image"],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "name": {
        "type": "string"
      },
      "series_short_name": {
        "type": "string"
      },
      "image": {
        "type": "string",
        "format": "uri"
      }
    }
  }
}
