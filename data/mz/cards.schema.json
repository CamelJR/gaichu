{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "allOf": [
      { "$ref": "../cards.schema.base.json" },
      {
        "type": "object",
        "required": ["description"],
        "properties": {
          "illustrators": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Afton"]
            }
          },
          "rarity": {
            "type": "string",
            "enum": ["Silver"]
          },
          "set_short_name": {
            "type": "string",
            "enum": ["promo"]
          },
          "series_short_name": {
            "type": "string",
            "enum": ["mz"]
          },
          "sets": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name", "image"],
              "properties": {
                "name": {
                  "type": "string",
                  "enum": ["promo"]
                },
                "image": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "additionalProperties": false
            }
          },
          "hp": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "measurement": {
            "type": "object",
            "required": ["height", "weight"],
            "properties": {
              "height": {
                "type": "string"
              },
              "weight": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "attacks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "effect"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "effect": {
                  "type": "string"
                },
                "damage": {
                  "type": ["string"]
                },
                "costs": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "Fire",
                      "Fighting",
                      "Psychic",
                      "Electric",
                      "Dark",
                      "Dragon",
                      "Steel",
                      "Water",
                      "Grass",
                      "Normal"
                    ]
                  },
                  "minItems": 1
                }
              },
              "additionalProperties": false
            },
            "minItems": 1
          }
        }
      }
    ]
  }
}
